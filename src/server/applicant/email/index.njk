{% extends 'layouts/page.njk' %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  {{ appHeading({
    text: heading
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST" action="/applicant/email" novalidate>
        {{ govukInput({
          label: {
            text: "Enter your email address",
            classes: "govuk-label--l",
            isPageHeading: false
          },
          id: "applicant-email",
          name: "applicantEmail",
          type: "email",
          spellcheck: false,
          value: applicantEmail,
          errorMessage: errors.applicantEmail and {
            text: errors.applicantEmail.text
          }
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            "data-testid": "submit"
          }
        }) }}
      </form>
    </div>
  </div>
{% endblock %} 